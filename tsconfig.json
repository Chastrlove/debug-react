{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "react": ["react/packages/react"],
      "react-dom": ["react/packages/react-dom"],
      "shared": ["react/packages/shared"],
      "react-reconciler": ["react/packages/react-reconciler"],
      "scheduler": ["react/packages/scheduler"]
    }
  },
  "include": ["src"]
}
